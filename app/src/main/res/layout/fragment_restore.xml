<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pirate_wallet_bg"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <TextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textAlignment="center"
        android:paddingTop="32dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/barlowregular"
        android:text="@string/restore_phrase"
        android:textColor="@color/text_light"
        android:textSize="16sp"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginTop="30dp"
        android:paddingStart="32dp"
        android:paddingTop="18dp"
        android:textSize="20sp"
        android:text="@string/enter_seed_phrase"
        android:textColor="@color/zcashWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_layout_seed_phrase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:theme="@style/Zcash.Overlay.TextInputLayout"
        app:helperText="@string/nobody_watching"
        app:helperTextTextAppearance="@style/ARRR.TextAppearance.ARRR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_subtitle"
        app:layout_constraintWidth_percent="0.84">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_seedphrase"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:textColor="@color/text_light"
            android:textColorHint="@color/text_light_dimmed" />
    </com.google.android.material.textfield.TextInputLayout>

