<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:background="@color/pirate_wallet_bg"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/pirateWalletLogo"
        android:src="@drawable/pirateicon"
        android:background="@drawable/rounded_drawable_with_elevation"
        android:elevation="15dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_below="@id/pirateWalletLogo"
        android:id="@+id/pirateWalletText"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_pirate_wallet_txt"
        ></ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/pirateWalletText"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/restore_from"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="42dp"
            android:layout_above="@+id/recovery_phrase_layout"
            android:text="@string/restore_from"
            android:fontFamily="@font/barlowregular"
            android:textColor="@color/pirate_wallet_grey_text"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/lineSeperator"
            android:layout_gravity="center"
            android:id="@+id/recovery_phrase_layout"
            android:background="@drawable/background_login_restore"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/icon_gray_background"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/recovery_phrase"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:paddingBottom="7dp"
                    android:textColor="@color/pirate_wallet_text_color"
                    android:fontFamily="@font/barlowregular"
                    >

                </TextView>
            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/lineSeperator"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_centerHorizontal="true"
            android:background="@color/pirate_wallet_seperator"
            android:layout_above="@+id/create_new_wallet"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/create_new_wallet"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/icon_blue_background"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/create_new_wallet_str"
                android:textAlignment="center"
                android:textSize="18sp"
                android:paddingBottom="5dp"
                android:textColor="@color/pirate_wallet_dark_color"
                android:fontFamily="@font/barlowregular"
                >

            </TextView>
        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>